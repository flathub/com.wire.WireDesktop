{
  "app-id": "com.wire.WireDesktop",
  "base": "io.atom.electron.BaseApp",
  "base-version": "18.08",
  "command": "wire-desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "rename-desktop-file": "wire-desktop.desktop",
  "rename-icon": "wire-desktop",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--env=TMPDIR=/var/tmp",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=com.canonical.AppMenu.Registrar",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz"
        }
      ]
    },
    {
      "name": "wire-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x wire_*.deb",
        "tar -xf data.tar.xz",
        "rm -f control.tar.gz data.tar.xz debian-binary wire_*.deb",
        "cp -r opt/* usr/* /app",
        "install -Dm0755 wire-desktop.sh /app/bin/wire-desktop",
        "install -Dm0644 -t /app/share/metainfo/ com.wire.WireDesktop.appdata.xml",
        "desktop-file-edit --set-key=Exec --set-value=\"/app/bin/wire-desktop %u\" /app/share/applications/wire-desktop.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["i386"],
          "sha256": "9780c8cc0cc97783fe769f947499f872851270daa29760ac0136904798335457",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/release/3.4.2879/wire_3.4.2879_i386.deb"
        },
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "2d95f2aa0eac6d55cbcc3851e39e708f310d229c75d5ea919767e1bd075f67b4",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/release/3.4.2879/wire_3.4.2879_amd64.deb"
        },
        {
          "type": "file",
          "sha256": "7f66588be58b3854609729e9531ba5693e13e090d8ec037bca73f013ea7dd4e9",
          "url": "https://github.com/wireapp/wire-desktop/archive/release/3.4.2879.tar.gz"
        },
        {
          "type": "file",
          "path": "com.wire.WireDesktop.appdata.xml"
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/Wire/wire-desktop \"$@\""
          ],
          "dest-filename": "wire-desktop.sh"
        }
      ]
    }
  ]
}
