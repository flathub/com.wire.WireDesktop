{
  "app-id": "com.wire.WireDesktop",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "18.08",
  "command": "wire-desktop",
  "rename-desktop-file": "wire-desktop.desktop",
  "rename-icon": "wire-desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11",
    "--talk-name=com.canonical.AppMenu.Registrar",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.portal.Fcitx",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/debug",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "33ee5dfd3556931b81d47111890c8b9c51093b4ced18e0e87f51c1769e24d43c",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.8/libsecret-0.18.8.tar.gz"
        }
      ]
    }, {
      "name": "wire-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x Wire-3.10.2904*.deb",
        "tar -xf data.tar.xz",
        "cp -r opt/* usr/* /app",
        "desktop-file-edit --set-key=Exec --set-value=\"/app/bin/wire-desktop %U\" /app/share/applications/wire-desktop.desktop",
        "install -D -m0755 wire-desktop.sh /app/bin/wire-desktop",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "967563c0341a2e6d379b774d8c9a472d6fe044219f707942a71ed28a4c213fef",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/linux/3.10.2904/Wire-3.10.2904_amd64.deb"
        }, {
          "type": "file",
          "sha256": "25eec808ecd2bed5506749cc29c8ed5534dc455cf153d8e40ad933b68dfff031",
          "url": "https://github.com/wireapp/wire-desktop/archive/linux/3.10.2904.tar.gz"
        }, {
          "type": "file",
          "path": "com.wire.WireDesktop.appdata.xml"
        }, {
          "type": "script",
          "commands": [
            "TMPDIR=${XDG_CACHE_HOME}/tmp/",
            "export TMPDIR",
            "exec env /app/Wire/wire-desktop \"$@\""
          ],
          "dest-filename": "wire-desktop.sh"
        }
      ]
    }
  ]
}
