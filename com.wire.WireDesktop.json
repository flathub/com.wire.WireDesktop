{
  "app-id": "com.wire.WireDesktop",
  "base": "io.atom.electron.BaseApp",
  "base-version": "18.08",
  "command": "wire-desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "rename-desktop-file": "wire-desktop.desktop",
  "rename-icon": "wire-desktop",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=com.canonical.AppMenu.Registrar",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz"
        }
      ]
    },
    {
      "name": "wire-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x wire_*.deb",
        "tar -xf data.tar.xz",
        "rm -f control.tar.gz data.tar.xz debian-binary wire_*.deb",
        "cp -r opt/* usr/* /app",
        "install -Dm0755 wire-desktop.sh /app/bin/wire-desktop",
        "install -Dm0644 -t /app/share/metainfo/ com.wire.WireDesktop.appdata.xml",
        "desktop-file-edit --set-key=Exec --set-value=\"/app/bin/wire-desktop %u\" /app/share/applications/wire-desktop.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["i386"],
          "sha256": "2dd49e94e80f6c58fd615933544b6f6cff6615f7c125a8f68cbafaa89932b268",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/linux/3.5.2881/wire_3.5.2881_i386.deb"
        },
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "719881099b5384b1c0f493f57fc45494991b3733cbbfe060954768de898e519f",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/linux/3.5.2881/wire_3.5.2881_amd64.deb"
        },
        {
          "type": "file",
          "sha256": "4216cd9c3a2c4920aec2f3c967181b04bfafdb1b47e526a8e823911cce704da1",
          "url": "https://github.com/wireapp/wire-desktop/archive/linux/3.5.2881.tar.gz"
        },
        {
          "type": "file",
          "path": "com.wire.WireDesktop.appdata.xml"
        },
        {
          "type": "script",
          "commands": [
            "exec env TMPDIR=${XDG_CACHE_HOME}/tmp/ /app/Wire/wire-desktop \"$@\""
          ],
          "dest-filename": "wire-desktop.sh"
        }
      ]
    }
  ]
}
